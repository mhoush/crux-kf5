# Description: Lite image scanning application for the KDE desktop
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: kio libksane

name=skanlite
version=2.1.0.1
release=1
source=(http://download.kde.org/stable/$name/${version%.0.1}/$name-$version.tar.xz)

build() {
	cd $name-$version
	mkdir build; cd build

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev \
	..

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
