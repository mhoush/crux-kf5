# Description: Integrated work applications suite for the KDE desktop
# URL: https://www.calligra.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: akonadi-contacts cauchy gsl kcalcore kcmutils kdiagram knotifyconfig kreport kross ktexteditor libetonyek libodfgen libvisio libwpg libwps okular openexr openjpeg pstoedit vc kholidays

name=calligra
version=3.1.0
release=4
source=(http://download.kde.org/stable/$name/$version/$name-$version.tar.xz
	calligra-qt5.11.patch
	calligra-poppler-0.69.patch
	calligra-poppler-0.71.patch
	calligra-poppler-0.72.patch)

build() {

	cd $name-$version
	# Fix build with QT 5.11.0
	patch -Np1 -i $SRC/calligra-qt5.11.patch

	# Fix build with poppler > 0.72
	patch -Np1 -i $SRC/calligra-poppler-0.69.patch
	patch -Np1 -i $SRC/calligra-poppler-0.71.patch
	patch -Np1 -i $SRC/calligra-poppler-0.72.patch

	cd -

	mkdir build; cd build

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DCMAKE_INSTALL_LIBEXECDIR=lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev \
	../$name-$version

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
	find $PKG -name README -delete
}
