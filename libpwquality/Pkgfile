# Description: Password quality checking library
# URL: https://github.com/libpwquality/libpwquality
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: cracklib

name=libpwquality
version=1.4.2
release=1
source=(https://github.com/libpwquality/libpwquality/releases/download/libpwquality-1.4.2/libpwquality-1.4.2.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--disable-nls \
		--disable-static \
		--with-securedir=/lib/security

	make
	make DESTDIR=$PKG install
}
