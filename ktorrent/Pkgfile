# Description: KF5 compatible Torrent client 
# URL: http://ktorrent.pwsp.net/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: kdelibs4support kdnssd kross libktorrent plasma-workspace

name=ktorrent
version=5.0.1
release=2
source=(http://download.kde.org/stable/$name/${version:0:3}/$name-$version.tar.xz
	ktorrent-5.0.1-build.patch)

build() {
	cd $name-$version

	patch -Np1 -i $SRC/ktorrent-5.0.1-build.patch

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
