# Description: KF5 compatible Torrent client 
# URL: http://ktorrent.pwsp.net/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: kdnssd kross libktorrent plasma-workspace

name=ktorrent
version=5.1.2
release=1
source=(http://download.kde.org/stable/$name/$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
