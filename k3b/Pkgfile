# Description: Breakout-like game for KDE
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: cdrdao kcmutils kfilemetadata knewstuff knotifyconfig lame libdvdread libkcddb libmad libsamplerate qtwebkit

name=k3b
version=21.12.2
release=2
source=(http://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz
	k3b-21.12.1-ffmpeg-5.0.patch)

build() {
	cd $name-$version
	patch -Np1 -i $SRC/k3b-21.12.1-ffmpeg-5.0.patch

	cmake -Bbuild \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \

	cmake --build build
	DESTDIR=$PKG cmake --install build

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
