# Description: AqBanking is a library for online banking and financial applications
# URL: https://www.aquamaniac.de/sites/aqbanking/index.php
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: gwenhywfar ktoblzcheck libofx xmlsec1

name=aqbanking
version=5.7.8
release=1
source=("https://www.aquamaniac.de/sites/download/download.php?package=03&release=217&file=02&dummy=$name-$version.tar.gz")

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--sysconfdir=/usr/etc \
		--enable-gwenhywfar \
		--disable-static \
		--disable-tutorials

	make -j1
	make -j1 DESTDIR=$PKG install

	rm -rf $PKG/usr/share/{doc,locale}
}
