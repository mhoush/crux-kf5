# Description: AqBanking is a library for online banking and financial applications
# URL: https://www.aquamaniac.de/sites/aqbanking/index.php
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: gwenhywfar ktoblzcheck libofx xmlsec1

name=aqbanking
version=5.8.1
release=1
source=(https://github.com/$name/$name/archive/$version/$name-$version.tar.gz
	fix-libaqhbci-la.diff)

build() {
	cd $name-$version

	patch -Np1 -i $SRC/fix-libaqhbci-la.diff

	autoreconf -vfi
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-gwenhywfar \
		--disable-static \
		--disable-tutorials

	make -j1
	make -j1 DESTDIR=$PKG install

	rm -rf $PKG/usr/share/{doc,locale}
}
