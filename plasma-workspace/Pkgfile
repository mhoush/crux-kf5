# Description: Part of KDE Plasma
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: baloo iso-codes kdelibs4support kdesu kholidays kjsembed knotifyconfig krunner ksysguard ktexteditor kwin kxmlrpcclient networkmanager-qt phonon-qt5-backend-gstreamer
# Optional: libqalculate

name=plasma-workspace
version=5.13.2
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz
	52-upower.rules)

build() {
	cd $name-$version

	sed -i 's:qtpaths:qtpaths-qt5:' startkde/startkde.cmake

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DLIBEXEC_INSTALL_DIR=lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	# Add polkit rule to enable shutdown/restart
	install -Dm644 $SRC/52-upower.rules $PKG/usr/etc/polkit-1/rules.d/52-upower.rules

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,es,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
	find $PKG -name "README.txt" -delete
}
