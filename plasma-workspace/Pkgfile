# Description: Part of KDE Plasma
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: baloo iso-codes kactivities-stats kdelibs4support kdesu kholidays kjsembed knotifyconfig kpeople ksysguard ktexteditor kwin kxmlrpcclient libkscreen libqalculate phonon-qt5-backend-gstreamer prison

name=plasma-workspace
version=5.23.2
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz
	52-upower.rules
	kde.pam)

build() {
	cd $name-$version
	mkdir build; cd build

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DLIBEXEC_INSTALL_DIR=lib \
	-DBUILD_TESTING=OFF \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev \
	..

	make
	make DESTDIR=$PKG install

	# Add polkit rule to enable shutdown/restart
	install -Dm644 $SRC/52-upower.rules $PKG/etc/polkit-1/rules.d/52-upower.rules

	# Install PAM config file
	install -Dm644 $SRC/kde.pam $PKG/etc/pam.d/kde

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,es,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
	find $PKG -name "README.txt" -delete
}
