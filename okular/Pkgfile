# Description: Document viewer for KDE
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: gtk kactivities khtml kpty libkexiv2 libspectre poppler-qt5 qca-qt5 threadweaver

name=okular
version=17.04.0
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz
	okular.revdep)
release=1

build() {

    cd $name-$version

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	# fix revdep false positive for okularpart.so
	install -Dm644 $SRC/okular.revdep $PKG/etc/revdep.d/okular

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,es,et,fr,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
