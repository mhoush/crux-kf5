# Description: File manager, browser, document viewer for KDE
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: extra-cmake-modules qt5 kparts kcmutils khtml kdelibs4support kactivities kdoctools kded qtwebengine karchive kcrash kbookmarkskinit kwidgetsaddons kiconthemes kio kdesu desktop-file-utils gtk

name=konqueror
version=16.12.0
release=2
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz
	konqueror-qtwebengine-5.7.1.patch)

build() {
	cd $name-$version

	# https://bugs.kde.org/show_bug.cgi?id=373781
	patch -Np1 -i $SRC/konqueror-qtwebengine-5.7.1.patch

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
	find $PKG -type f -name "README.*" -exec rm -v {} \;
}
