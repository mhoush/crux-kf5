# Description: Graphviz is open source graph visualization software
# URL: http://www.graphviz.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: freeglut ghostscript glade gtkglext libgd swig tcl

name=graphviz
version=2.44.0
release=1
source=(https://gitlab.com/graphviz/graphviz/-/archive/stable_release_${version}/$name-stable_release_$version.tar.bz2)

build() {
	cd $name-stable_release_${version}

	./autogen.sh
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--libdir=/usr/lib \
		--disable-static

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/doc $PKG/usr/share/graphviz/doc
	find $PKG -iname "*.readme" -delete
}
