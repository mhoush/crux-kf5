# Description: libdmtx is open source software for reading and writing Data Matrix barcodes
# URL: http://libdmtx.sourceforge.net/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: glibc  

name=libdmtx
version=0.7.4
release=1
source=(https://sourceforge.net/projects/$name/files/$name/$version/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--libdir=/usr/lib \
		--disable-static

	make
	make DESTDIR=$PKG install
}
