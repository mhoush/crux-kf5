# Description: Secure PinEntry Dialog (Qt5 version)
# URL:         http://www.gnupg.org
# Maintainer:  Tsaop, leeroy at cock dot li
# Depends on:  pinentry qt5

name=pinentry-qt5
version=1.0.0
release=1
source=(ftp://ftp.gnupg.org/gcrypt/pinentry/pinentry-$version.tar.bz2)

build() {
    cd pinentry-$version

    ./configure \
      --prefix=/usr \
      --disable-pinentry-{curses,tty,emacs,gtk2,gnome3} \
      --enable-pinentry-qt

    make -j1
    make DESTDIR=$PKG install

    rm -rf $PKG/usr/share
    rm $PKG/usr/bin/pinentry
}
