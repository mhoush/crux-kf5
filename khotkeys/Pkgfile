# Description: Part of KDE Plasma
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: plasma-workspace

name=khotkeys
version=5.17.0
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz
	khotkeys-qdbus-qt5.patch)

build() {
	cd $name-$version

	# patch khotkeys to use -qt5 prefixed tools, as per default setting in CRUX
	patch -Np1 -i $SRC/khotkeys-qdbus-qt5.patch

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
