# Description: CrackLib Library and Dictionaries
# URL: https://github.com/cracklib/cracklib/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on:  python

name=cracklib
version=2.9.7
release=1
source=(https://github.com/$name/$name/releases/download/v${version}/$name-$version.tar.bz2
	https://github.com/$name/$name/releases/download/v${version}/$name-words-$version.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--disable-nls \
		--disable-static

	make
	make DESTDIR=$PKG install

	# install dictionaries
	install -dm755 $PKG/usr/share/dict
	bzcat $SRC/$name-words-$version.bz2 > $PKG/usr/share/dict/$name-words
}
