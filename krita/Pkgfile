# Description: Digital painting application
# URL: https://www.krita.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: exiv2 gsl gtk kio kitemmodels kseexpr libraw libwebp mypaint-brushes opencolorio openjpeg2 poppler-qt5 python3-pyqt5 quazip5 vc xorg-xinput

#TODO: re-enable opencolorio once version 2.0.0 is supported

name=krita
version=5.0.0
release=1
source=(http://download.kde.org/stable/$name/$version/$name-$version.tar.gz)

build() {
	cmake -B"${name}-build" \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_CXX_FLAGS="-DKDE_NO_DEBUG_OUTPUT" \
	-Wno-dev \
	$name-$version

	cmake --build "${name}-build"
	DESTDIR=$PKG cmake --install "${name}-build"

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
	find $PKG -type f -name "README.*" -delete
	find $PKG -type f -name "README" -delete
}
