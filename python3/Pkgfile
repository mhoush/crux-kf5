# Description: Python interpreter, version 3.6.
# URL:         http://www.python.org/
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  sqlite3 expat libffi

name=python3
version=3.6.0
release=1
source=(https://www.python.org/ftp/python/$version/Python-$version.tar.xz)

build() {
	cd Python-$version

	rm -rf Modules/expat
	rm -rf Modules/_ctypes/{darwin,libffi}*
	rm -rf Modules/zlib
	rm -rf Modules/_decimal/libmpdec

	./configure --prefix=/usr \
		--enable-shared \
		--with-threads \
		--with-sqlite \
		--enable-ipv6 \
		--with-system-expat \
		--with-system-ffi \
		--with-system-libmpdec \
		--enable-loadable-sqlite-extensions \
		--without-ensurepip

	make
	make DESTDIR=$PKG altinstall

	find $PKG -name "README*" -delete
	find $PKG -name "ChangeLog*" -delete
	find $PKG -name "TODO*" -delete
	find $PKG -name "NEWS*" -delete

	ln -s /usr/bin/python3.6 $PKG/usr/bin/python3
}
