# Description: KDE-application for interactive graphing and analysis of scientific data
# URL: https://labplot.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: cantor cfitsio fftw gsl kdelibs4support netcdf

name=labplot
version=2.6.0
release=1
source=(https://download.kde.org/stable/$name/$version/$name-2.6.tar.xz
	fix-compilation-with-newer-hdf5.patch)

build() {
	cd $name-2.6

	patch -Np0 -i $SRC/fix-compilation-with-newer-hdf5.patch

	mkdir build; cd build

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DSYSCONF_INSTALL_DIR=/usr/etc \
		-DCMAKE_BUILD_TYPE=Release \
		..
	
	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/{doc,locale}
	( cd $PKG/usr/share/man
	  find . ! -path . -type d | grep -v "man[0-9]" | xargs rm -rf
	)
}
