# Description: Python3 bindings for Qt5
# URL: https://www.riverbankcomputing.com/software/pyqt
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: python3-sip-pyqt5 qtwebengine qtwebkit sip

name=pyqt5
_realname=PyQt5
version=5.12.2
release=1
source=(https://www.riverbankcomputing.com/static/Downloads/${_realname}/$version/${_realname}_gpl-$version.tar.gz)

build() {
	cd ${_realname}_gpl-$version

	python3 configure.py \
		--confirm-license \
		--no-sip-files \
		--no-dist-info \
		-q /usr/bin/qmake-qt5

	make
	make INSTALL_ROOT=$PKG install
}
