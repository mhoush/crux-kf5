# Description: A configuration database system
# URL: https://www.gnome.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: dbus-glib gtk3 openldap polkit

name=gconf
_realname=GConf
version=3.2.6
release=1
source=(https://download.gnome.org/sources/${_realname}/${version:0:3}/${_realname}-$version.tar.xz)

build() {
	cd ${_realname}-$version

	./configure --prefix=/usr \
		--sysconfdir=/usr/etc \
		--libexecdir=/usr/lib \
		--disable-static \
		--disable-nls \
		--disable-orbit \
		--disable-gtk-doc

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale $PKG/usr/share/gtk-doc
}
