# Description: Library for importing Microsoft Works documents
# URL: https://sourceforge.net/projects/libwps/files/libwps
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: librevenge

name=libwps
version=0.4.8
release=1
source=(https://sourceforge.net/projects/libwps/files/$name/$name-$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--libdir=/usr/lib \
		--disable-tests \
		--disable-werror

	make
	make DESTDIR=$PKG install
}
