# Description: Common libraries to implement IDE-like programs
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: grantlee gtk kcmutils kitemmodels knewstuff knotifyconfig ktexteditor libkomparediff2 qtwebkit threadweaver

name=kdevplatform
version=5.0.3
release=1
source=(http://download.kde.org/stable/kdevelop/$version/src/$name-$version.tar.xz
	kdevplatform-5.0.3-kconfig.patch
	kdevplatform-qdbus-qt5.patch)

build() {
	cd $name-$version

	# https://bugs.gentoo.org/show_bug.cgi?id=606158
	patch -Np1 -i $SRC/kdevplatform-5.0.3-kconfig.patch
	# Rename all qdbus occurrencies to qdbus-qt5, as per CRUX default
	patch -Np1 -i $SRC/kdevplatform-qdbus-qt5.patch

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
