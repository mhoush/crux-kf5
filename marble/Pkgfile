# Description: Virtual globe and world atlas for the KDE desktop
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: gtk knewstuff kparts krunner qtwebkit

name=marble
version=17.04.0
release=1
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version
	
	sed -e '/mobile/d' \
      -e '/qt/d'  \
      -e '/Quick/d' \
      -e '/touch/d' \
      -i src/apps/CMakeLists.txt

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DCMAKE_INSTALL_LIBDIR=lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-DBUILD_MARBLE_TESTS=OFF \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
