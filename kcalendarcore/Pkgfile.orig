# Description: Part of Kdepimlibs
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: freetype glib harfbuzz kdelibs4support libglvnd libical libpng qt5 xorg-libx11 xorg-libxau xorg-libxcb xorg-libxdmcp

name=kcalendarcore
version=5.91.0
release=1
source=(https://download.kde.org/stable/frameworks/${version%.0}/$name-$version.tar.xz)

build() {
	cd $name-$version
	mkdir build; cd build

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DKDE_INSTALL_LIBDIR=lib \
	-DCMAKE_BUILD_TYPE=Release \
	-DBUILD_TESTING=OFF \
	-Wno-dev \
	..

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
