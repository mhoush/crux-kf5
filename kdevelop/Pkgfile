# Description: A cross-platform IDE for C, C++, Python, JavaScript and PHP
# URL: https://www.kdevelop.org/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: clang kdevelop-pg-qt kdevplatform krunner libksysguard
# Optional: okteta

name=kdevelop
version=5.0.3
release=1
source=(http://download.kde.org/stable/kdevelop/$version/src/$name-$version.tar.xz
	kdevelop-qdbus-qt5.patch)

build() {
	cd $name-$version

	# Rename all qdbus occurrencies to qdbus-qt5, as per CRUX default
	patch -Np1 -i $SRC/kdevelop-qdbus-qt5.patch

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev
	
	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
