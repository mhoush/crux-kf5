# Description: A cross-platform IDE for C, C++, Python, JavaScript and PHP
# URL: https://www.kdevelop.org/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: clang cppcheck grantlee heaptrack-gui kdevelop-pg-qt knotifyconfig krunner ktexteditor libkomparediff2 libksysguard okteta purpose qtwebengine
# Optional: subversion

name=kdevelop
version=5.6.0
release=1
source=(http://download.kde.org/stable/kdevelop/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version
	mkdir build; cd build

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev \
	..
	
	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
	find $PKG -name README -delete
}
