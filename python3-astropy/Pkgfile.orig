name=python3-astropy
version=4.0.3
release=1
source=(https://files.pythonhosted.org/packages/5f/0f/e475b322cbecfcaab21ead92f11244d850dd2638563b93af5a3c7d4c6b34/${name/python3-/}-$version.tar.gz)

build() {
	cd ${name/python3-/}-$version
	python3 setup.py build
	python3 setup.py install --prefix=/usr --root=$PKG
}
