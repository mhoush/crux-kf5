# Description: Read metadata from Python packages
# URL: https://pypi.python.org/pypi/importlib-metadata
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on:  python3-zipp

name=python3-importlib-metadata
version=1.6.0
release=1
source=(https://files.pythonhosted.org/packages/b4/1b/baab42e3cd64c9d5caac25a9d6c054f8324cdc38975a44d600569f1f7158/importlib_metadata-$version.tar.gz)

build() {
	cd importlib_metadata-$version
	python3 setup.py build
	python3 setup.py install --prefix=/usr --root=$PKG

	# fix permissions
	find $PKG -perm -a=w -exec chmod a-w {} \;
}
