# Description: Library for generating documents in .ODF format
# URL: https://sourceforge.net/projects/libwpd/files/libodfgen
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: librevenge

name=libodfgen
version=0.1.6
release=1
source=(https://sourceforge.net/projects/libwpd/files/$name/$name-$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--libdir=/usr/lib \
		--disable-tests

	make
	make DESTDIR=$PKG install
}
