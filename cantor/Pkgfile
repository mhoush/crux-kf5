# Description: KDE Frontend to Mathematical Software
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: gtk knewstuff kpty ktexteditor libspectre
# Optional: python python3 libqalculate analitza luajit

name=cantor
version=16.12.2
release=2
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz
	cantor-16.12.2-python-kf-5.31.patch)

build() {
	cd $name-$version

	# remove modern C++ use to fix compile with current KDE policy
	patch -Np1 -i $SRC/cantor-16.12.2-python-kf-5.31.patch

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/usr/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DBUILD_TESTING=OFF \
	-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
