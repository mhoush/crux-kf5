# Description: Part of KDE Plasma
# URL: https://www.kde.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: breeze kinit kscreenlocker plasma-framework xorg-xcb-util-cursor xorg-xrandr

name=kwin
version=5.17.1
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz
	kwin-fix-mesa-19.2.patch)

build() {
	cd $name-$version
	patch -Np1 -i $SRC/kwin-fix-mesa-19.2.patch

	mkdir build; cd build

	cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSCONF_INSTALL_DIR=/etc \
	-DLIB_INSTALL_DIR=/usr/lib \
	-DLIBEXEC_INSTALL_DIR=lib \
	-DBUILD_TESTING=OFF \
	-DCMAKE_BUILD_TYPE=Release \
	-Wno-dev \
	..

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/man/{ca,de,it,nl,pt_BR,sv,uk,ru}
	rm -rf $PKG/usr/share/doc
}
