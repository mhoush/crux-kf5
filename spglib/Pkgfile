# Description: C library for finding and handling crystal symmetries
# URL: http://wiki.openchemistry.org/Avogadro
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: glibc  

name=spglib
version=1.10.1
release=2
source=(https://github.com/atztogo/$name/archive/v${version}.tar.gz
	spglib-fix-undefined-symbols.patch)

build() {
	cd $name-$version

	patch -Np1 -i $SRC/spglib-fix-undefined-symbols.patch

	touch NEWS README AUTHORS

	autoreconf -vfi
	./configure --prefix=/usr \
		--libdir=/usr/lib \
		--enable-shared \
		--disable-static
	
	make
	make DESTDIR=$PKG install
}
