# Description: Base library for writing document import filters
# URL: http://sf.net/p/libwpd/librevenge
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: boost cppunit

name=librevenge
version=0.0.4
release=1
source=(https://sourceforge.net/projects/libwpd/files/$name/$name-$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--libdir=/usr/lib \
		--disable-tests \
		--disable-werror

	make
	make DESTDIR=$PKG install
}
